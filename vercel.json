{
  "version": 2,
  "name": "zen-chat-backend",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "framework": null,
  "outputDirectory": "backend"
}
